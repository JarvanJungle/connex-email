doctype html
html
    head
        style(type='text/css').
            body {
                margin: 0;
            }

            .header {
                background-color: #aec57d;
                padding: 1.5rem 4em;
            }

            .content {
                padding: 0 3rem;
            }

            .footer {
                background-color: #ececec;
                padding-top: 0.5rem;
                padding-bottom: 1.5rem;
                text-align: center;
                margin-top: 1rem;
            }

            .link,
            .link > a {
                font-weight: bold;
                color: #aec57d;
            }
    body
        .header
            img(alt='Doxa-logo', src='data:image/png;base64,')
        .content
            h3 Dear #{name},
            p #{title}
            p !{message}
            | Thank You.
            br
            br
            | Best Regards,
            br
            | Doxa Team.
            br
        .footer
            .link
                a(href='#') Privacy Policy&nbsp;|&nbsp;
                a(href='#') Terms and Conditions&nbsp;|&nbsp
                a(href='#') Contact us
            br
            span Copyright &copy; 2021 Doxa Holdings
